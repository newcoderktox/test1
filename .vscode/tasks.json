{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C Program",
            "type": "shell",
            "command": "${default}", // Platforma göre komut belirle
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}" // Derleme dizinini ayarla
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build task for both Windows and macOS",
            "windows": {
                "command": "C:/msys64/ucrt64/bin/gcc.exe" // Windows için GCC
            },
            "linux": {
                "command": "/usr/bin/gcc" // macOS için GCC veya Clang
            }
        }
    ]
}
